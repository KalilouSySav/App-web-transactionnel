<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - tpFinalA16</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tpFinalA16.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/carousel/">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/commun.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/features.css" asp-append-version="true" />
    
</head>
<body>
    <header data-bs-theme="dark">
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="pageHome">
                    <svg xmlns="http://www.w3.org/2000/svg" class="rounded-circle border border-white" width="37" height="32" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" style="background-color: #FFFFFF; color: #000000;">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M6 4l6 16l6 -16" />
                    </svg>
                    &nbsp; VertCité - Produits Écologiques
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="pageHome">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="pageAfficherListeProduits">Produits</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="pageContact">Contact</a>
                        </li>
                    </ul>
                    <form asp-controller="Produit" asp-action="RechercherNom" method="post" class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Rechercher un produit" aria-label="Search" name="nomProduit">
                        <button class="btn btn-outline-success" type="submit">Recherche</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="" id="haut">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-md-4 mb-0 text-body-secondary">&copy; 2023  VertCité. Tous droits réservés.</p>
            <a asp-controller="Home" asp-action="pageHome" class="col-md-3 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="rounded-circle border border-white" width="32" height="32" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" style="background-color: #000000; color: #FFFFFF;">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M6 4l6 16l6 -16" />
                </svg>
            </a>
            <ul class="nav col-md-3 justify-content-left">
                <li class="nav-item"><a asp-controller="Home" asp-action="pageHome" class="nav-link px-2 text-body-secondary">Accueil</a></li>
                <li class="nav-item"><a asp-controller="Home" asp-action="pageAfficherListeProduits" class="nav-link px-2 text-body-secondary">Produits</a></li>
                <li class="nav-item"><a asp-controller="Home" asp-action="pageContact" class="nav-link px-2 text-body-secondary">Contact</a></li>
            </ul>
            <p class="float-end col-md-2 align-items-stretch">
                <a href="#haut" style="text-decoration: none;">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-up">
                        <path d="M12 19V5M5 12l7-7 7 7" />
                    </svg>
                    retour en haut
                </a>
            </p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
